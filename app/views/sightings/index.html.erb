<h1>Listing sightings</h1>

<table>
  <tr>
    <th>Occurance time</th>
    <th>Cities</th>
    <th>Shape</th>
    <th>Duration</th>
    <th>Summary</th>
    <th>Post date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sightings.each do |sighting| %>
  <tr>
    <td><%= sighting.occurance_time %></td>
    <td><%= sighting.cities_id %></td>
    <td><%= sighting.shape %></td>
    <td><%= sighting.duration %></td>
    <td><%= sighting.summary %></td>
    <td><%= sighting.post_date %></td>
    <td><%= link_to 'Show', sighting %></td>
    <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
    <td><%= link_to 'Destroy', sighting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

